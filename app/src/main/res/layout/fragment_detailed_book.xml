<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DetailedBookFragment"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvDetailedMoreBooksThan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView15"
                    android:layout_marginTop="15dp"
                    android:minHeight="150dp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hr2"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/_more_books_than"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <LinearLayout
                    android:id="@+id/lnrDetailedBookPanel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtDetailedPublisherDescription"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/genre"
                            android:textAlignment="center"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/released"
                            android:textAlignment="center"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/length"
                            android:textAlignment="center"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/seller"
                            android:textAlignment="center"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/language"
                            android:textAlignment="center"
                            android:textSize="11sp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtDetailedGenre"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txtDetailedReleased"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txtDetailedBookLength"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txtDetailedBookSeller"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txtDetailedBookLanguage"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textColor="#000000"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:id="@+id/txtDetailedPublisherDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView7"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hr"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/abril_fatface"
                    android:text="@string/publisher_description"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/imageButtonDetailedGift"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/btnDetailedBookBuy"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/imageButtonDetailedMore"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_card_giftcard_black_24dp" />

                <ImageButton
                    android:id="@+id/imageButtonDetailedMore"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/btnDetailedBookBuy"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="20dp"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_more" />

                <Button
                    android:id="@+id/btnDetailedAddToCart"
                    android:layout_width="140dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/btnDetailedBookBuy"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/btn_add_to_card_background"
                    android:drawableStart="@drawable/ic_shopping_cart_btn"
                    android:drawablePadding="10dp"
                    android:paddingStart="10dp"
                    android:text="@string/_add_to_card"
                    android:textAlignment="textStart"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/btnDetailedBookBuy"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_below="@id/txtDetailedBookAuthor"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/btn_detailed_buy_background"
                    android:text="@string/_buy_btn"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/txtDetailedBookAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtDetailedBookName"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="7dp"
                    android:maxHeight="200dp"
                    android:text="@string/_author_dt"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txtDetailedBookName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgDetailedBookImage"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imgDetailedBookImage"
                    android:layout_width="170dp"
                    android:layout_height="250dp"
                    android:layout_below="@id/imageButtonBack"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/imageButtonBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:background="@null"
                    app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

                <View
                    android:id="@+id/hr"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/btnDetailedAddToCart"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/darker_gray" />

                <View
                    android:id="@+id/hr2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/lnrDetailedBookPanel"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />

                <ProgressBar
                    android:id="@+id/pbLoadingProcess"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_below="@id/txtDetailedBookAuthor"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:indeterminateTint="#3E2BBE"
                    android:visibility="visible" />

            </RelativeLayout>
        </LinearLayout>


    </ScrollView>

</LinearLayout>